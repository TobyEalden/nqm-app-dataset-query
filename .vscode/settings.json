{
    "eslint.enable": true,
    "eslint.options" : {
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "experimentalDecorators": true,
            "jsx": true
        }
    },
    "rules": {
        "no-unused-vars": [
            "error", 
            { 
                "vars": "all", 
                "args": "after-used" 
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
        "react",
        "json"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
}